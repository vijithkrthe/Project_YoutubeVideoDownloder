@{
    ViewData["Title"] = "YT Download";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.min.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body class="d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10 col-12">
                <div class="card p-4 shadow">
                    <div class="text-center mb-4">
                        <h3>Enter Video URL</h3>
                    </div>
                    <div class="form-group">
                        <label for="Txt_Url" class="form-label">Video URL</label>
                        <input type="text" id="Txt_Url" class="form-control" placeholder="Enter video URL">
                    </div>
                    <div class="form-group mt-2">
                        <label class="form-label">Media Type</label><br />
                        <input type="radio" id="videoType" name="mediaType" value="video" checked />
                        <label for="videoType">Video</label>
                        <input type="radio" id="audioType" name="mediaType" value="audio" />
                        <label for="audioType">Audio</label>
                    </div>
                    <div class="d-grid gap-2 mt-3">
                        <button id="Btn_Show" class="btn btn-primary">Fetch Details</button>
                    </div>
                    <div id="downloadSection" class="mt-3" style="display: none;">
                        <div class="form-group mt-2">
                            <img id="thumbnail" src="" alt="Thumbnail" style="max-width: 100%; display: none;" />
                        </div>
                        <div class="form-group mt-2" id="qualitySection" style="display: none;">
                            <label for="qualitySelect" class="form-label">Select Quality</label>
                            <select id="qualitySelect" class="form-select"></select>
                        </div>
                        <div class="d-grid gap-2 mt-2">
                            <button id="Btn_Download" class="btn btn-success">Download</button>
                            <button id="Btn_Refresh" class="btn btn-secondary" style="display: none;">Refresh</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.all.min.js"></script>
    <script src="~/js/index.js"></script>
</body>
</html>
